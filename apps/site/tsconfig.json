{
  "extends": "@buttercatbot/tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".contentlayer/generated"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "plugins": [{
      "name": "next",
    }],
    "paths": {
      "contentlayer/generated": ["./.contentlayer/generated"],
      "@/*": [
        "./*"
      ]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strictNullChecks": true
  }
}
