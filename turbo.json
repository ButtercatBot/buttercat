{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [
		"**/.env.*local"
	],
	"pipeline": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": [
				"^build"
			],
			"env": [
				"NODE_ENV",
				"NEXT_PUBLIC_APP_URL"
			],
			"outputs": [
				"dist/**",
				".next/**",
				"!.next/cache/**"
			]
		},
		"test": {
			"dependsOn": [
				"^build"
			],
			"outputs": []
		},
		"lint": {
			"dependsOn": ["build"],
			"outputs": []
		},
		"typecheck": {
			"dependsOn": ["build"],
			"outputs": [],
			"cache": true
		}
	}
}